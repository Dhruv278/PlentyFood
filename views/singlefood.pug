                     ul.nav.navbar-nav.navbar-right
                         form(method='post')
                             input(type='search' name='Pincode' placeholder='Pincode')
                             input(type='submit' name='Search' placeholder='Search')

 .container-fluid
     .container(style='margin-top: 5px;')
         header.section-header.text-center
             h2#Technologies.section-title(style='margin-top: 15px; color: green;') Food Near By You:
             hr
     style.
         .text{
             color: black;
             }
  
     .container
         .row
             .col-md-6
                 div
                     h4.text Food Doner Name
                     p.para=`${donor.first_name} ${donor.last_name}`
                 div
                     h4.text Address
                     p=`${food.address}`
                 div
                     h4.text Area
                     p.para=`${food.area}`
                 div
                     h4.text Pincode
                     p.para=`${food.pincode}`
                 div 
                     h4.text Token
                     p(id=`${food.id}` style="display : none ;")
             .col-md-6
                 h4.text Food Name
                 p.para=`${food.name}`
                 h4.text Food Category
                 p.para=`${food.food_type}`
                 h4.text Food Expiry
                 p.para=`${food.expire_time} Hours`
                 h4.text People
                 p.para=`${food.no_of_person}`
                 
                 a#token.btn.btn-primary(href='#!'  onClick=`getToken("${food.id}")`) Get Token